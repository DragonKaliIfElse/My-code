#!/bin/bash
clear=false
while [[ "$1" != "" ]]; do
    case "$1" in
        --clearOn)
            clear=true
            shift
            ;;
    esac
done
while [ true ];do
    if [[ $clear == true ]]; then
        clear
    fi
	read -p "Palavra para traduzir para o inglês: " input
    echo ""
    case "$input" in
    "change")
        clear
        exit 0
        ;;
    "clip")
        clear 
        exit 1
        ;;
    "clear")
        clear
        continue
        ;;
    "clearOn")
        clear=true
        clear
        continue
        ;;
    "clearOff")
        clear=false
        continue
        ;;
    esac
	trans :en "$input"
    if [ "$clearOn" == "on" ];then
        echo "««WAITING»»"
        read nothing
        clear
    fi
done
