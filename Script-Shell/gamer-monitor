#!/bin/bash

monitor_config="/home/4n4tm4n/.config/hypr/config/monitor.conf"

if grep -q "preferred" "$monitor_config"; then
    sed -i "s|monitor = , preferred, auto, 1|monitor = HDMI-A-1, 1280x1024@75, 0x0, 1|" "$monitor_config"
    echo "MAX_FRAME_RATE=75HZ"
elif grep -q "0x0" "$monitor_config"; then
    sed -i "s|monitor = HDMI-A-1, 1280x1024@75, 0x0, 1|monitor = , preferred, auto, 1|" "$monitor_config"
    echo "MAX_FRAME_RATE=60HZ"
fi

